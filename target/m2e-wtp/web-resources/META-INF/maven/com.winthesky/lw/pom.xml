		<spring.version>3.2.10.RELEASE</spring.version>
		<jetty.version>7.6.15.v20140411</jetty.version>
		<slf4j.version>1.7.7</slf4j.version>
		<springsecurity.version>3.1.7.RELEASE</springsecurity.version>
